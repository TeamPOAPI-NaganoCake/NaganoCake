<h1>Orders#new</h1>
<p>Find me in app/views/orders/new.html.erb</p>
<div class="container mb-auto">
  <%= form_with model: @order, local: true do  |f| %>
  <div class="row">
    <h3>支払い方法</h3>
  </div>
  <div class="row">
    <div class="form-check">
      <%= f.radio_button :payment_method, :"クレジットカード" %>
      <%= f.label :payment_method, 'クレジットカード' %>
    </div>
  </div>
  <div class="row">
    <div class="form-check">
      <%= f.radio_button :payment_method, :"銀行振込" %>
      <%= f.label :payment_method, '銀行振込' %>
    </div>
  </div>
  <div class="row mt-5">
    <h3>お届け先</h3>
  </div>
  <div class="row mt-3">
    <div class="form-check">
      <%= f.radio_button :delivery_address, "customer_address" %>
      <%= f.label :delivery_address, 'ご自身のご住所' %><br />
            〒<%= current_customer.zip_code %> <%= current_customer.address %><br />
      <%= current_customer.last_name %> <%= current_customer.first_name %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="form-check">
      <%= f.radio_button :delivery_address, 'delivery_address' %>
      <%= f.label :delivery_address, '登録済み住所から選択' %><br />
      <%= f.collection_select(:delivery, @deliveries, :id, :view_destination) %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="form-check">
      <%= f.radio_button :delivery_address, "new_address" %>
      <%= f.label :delivery_address, '新しいお届け先' %>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
       <p>郵便番号（ハイフンなし）</p>
       <p>住所</p>
       <p>宛名</p>
    </div>
    <dic class="col-9 form-group">
      <%#= form_with model: @delivery, local: true do |f| %>
      <div class="row">
        <%= f.text_field :zip_code, placeholder: '1000001', class: 'form-control col-sm-3' %>
      </div>
      <div class="row mt-1">
        <%= f.text_field :address, placeholder: '東京都千代田区千代田1-1-1', class: 'form-control col-sm-5' %>
      </div>
      <div class="row mt-1">
        <%= f.text_field :name, placeholder: '横浜太郎', class: 'form-control col-sm-3' %>
      </div>
      <%# end %>
    </div>
  </div>
  <div class="row">
    <%= f.submit "確認画面へ進む", class: 'btn btn-success' %>
  </div>
</div>
<% end %>