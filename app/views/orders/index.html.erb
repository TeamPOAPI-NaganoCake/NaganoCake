<h1>Orders#index</h1>
<p>Find me in app/views/orders/index.html.erb</p>
<%= @oi.each do |o| %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">注文履歴一覧</div>
    <div class="col-8"></div>
  </div>
  <div class="row mt-3">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>注文日</th>
          <th class="text-left">配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
          <th>
            〒<%= order.delivery_zip_code %><br />
            <%= order.delivery_address %><br />
            <%= order.delivery_name %>
          </th>
          <th>
            <%= order.order_items.each do |order_item| %>
              <%= order_item.item.name %>
            <% end %>
          </th>
          <th><%= order.total_price %> 円</th>
          <th><%= order.order_status %></th>
          <th><%= link_to '表示する', order_path(order.id) %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>