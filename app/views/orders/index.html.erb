<div class="container">
  <div class="row">
  <h5 class="col-md-10 mx-auto">
    <span style="background-color:#C0C0C0">注文履歴一覧</span>
  </h5>
  </div>
  <div class="row mt-3">
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>注文日</th>
          <th class="text-left">配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <th><%= order.created_at.strftime('%Y/%m/%d') %></th>
          <th>
            〒<%= order.delivery_zip_code %><br />
            <%= order.delivery_address %><br />
            <%= order.delivery_name %>
          </th>
          <th>
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br />
            <% end %>
          </th>
          <th class="align-middle"><%= order.total_price %> 円</th>
          <th class="align-middle"><%= order.order_status %></th>
          <th class="align-middle"><%= link_to '表示する', order_path(order.id), class: 'btn btn-info' %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
  </div>
</div>