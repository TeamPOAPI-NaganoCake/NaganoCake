<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>ショッピングカート</h3>
    </div>
    <div class="col-md-6 text-right">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, class: "btn btn-sm btn-danger" %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td class="align-middle"><%= attachment_image_tag cart_item.item, :image, :fill, 80, 50, fallback: "no-image.jpg", size: "80x50" %><%= cart_item.item.name %></td>
          <td class="align-middle"><%= cart_item.item.tax_include_price %></td>
          <td class="align-middle">
            <%= form_with model: cart_item, local: true do |f| %>
              <%= f.select :product_amount, options_for_select(@numbers, {selected: cart_item.product_amount.to_i}) %>
              <%= f.submit "変更" %>
            <% end %>
          </td>
          <td class="align-middle"><%= cart_item.item.tax_include_price.sub_total_price %></td>
          <td class="align-middle"><%= link_to "削除する", cart_item_path(cart_item), class: "btn btn-sm btn-danger" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
  <div class="row">
    <div class="col-md-8">
      <%= link_to "買い物を続ける", items_path, class: "btn btn-sm btn-primary" %>
    </div>
    <div class="col-md-4">
      <table class="table table-bordered">
        <tr>
          <th>合計金額</th>
          <td></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <%= link_to "情報入力に進む", orders_new_path, class: "btn btn-success" %>
    </div>
  </div>
</div>