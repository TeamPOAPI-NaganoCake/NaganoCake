<div class="row">
  <%= render 'genre_search', genres: @genres %>
  <div class="col-md-9 mx-auto">
    <h2 class="mb-5"><%= @info %>一覧<span class="small"><%= "（全#{@item_all}件）" %></span></h2>
    <div class= "d-flex flex-wrap">
      <% @items.each do |item| %>

        <div class="col-md-3 my-3">
          <div class="card shadow">
            <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :image, fallback: "no-image.jpg", size: "100%", class: "card-img-top" %>
            <% end %>
            <div class="card-content px-3">
              <p class="card-title text-nowrap overflow-auto pt-3"><%= link_to item.name, item_path(item), class: "text-secondary" %></p>
              <p><%= "¥#{item.non_tax_price.to_s(:delimited)}" %></p>
            </div>
          </div>
        </div>

      <% end %>
    </div>
    <p><%= paginate @items, class: "justify-content-center" %></p>
  </div>
</div>
