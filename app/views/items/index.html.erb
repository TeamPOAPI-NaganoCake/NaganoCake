
  <div class="row">
     <%= render 'genre_search', genres: @genres %>
    <div class="col-md-9 mx-auto">

      <h2 class="mb-5"><%= @info %>一覧<span class="small"><%= "（全#{@item_all}件）" %></span></h2>
      <div class= "d-flex flex-wrap">
        <% @items.each do |item| %>
          <div class="font-weight-bold px-2 mb-3">
            <%= link_to item_path(item) do %>
              <%= attachment_image_tag item, :image, :fill, 200, 125, fallback: "no-image.jpg", size: "200x125" %>
            <% end %>
            <p class="pt-3"><%= link_to item.name, item_path(item) %></p>
            <p><%= "¥#{item.non_tax_price.to_s(:delimited)}" %></p>
          </div>
        <% end %>
      </div>


      <p><%= paginate @items, class: "justify-content-center" %></p>


  </div>