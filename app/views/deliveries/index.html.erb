<div class="container">
  <br>
  <h5>配送先登録/一覧</h5>
  <br>
<%= form_with model:@delivery, local:true do |f| %>
<table>
  <tr>
    <td>郵便番号（ハイフンなし）</td>
    <td><%= f.text_field :zip_code, autofocus: true, placeholder:"0000000" %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address, autofocus: true, placeholder:"東京都渋⾕区代々⽊神園町0-0" %></td>
  </tr>
  <tr>
    <td>宛名</td>
    <td><%= f.text_field :name, autofocus: true, placeholder:"令和道⼦" %></td>
    <td><%= f.submit "新規登録" %></td>
  </tr>
</table>
<% end %>

<br>
<div class="row">
<table class="table table-bordered">
  <thead class="thead-light">
  <tr class="active">
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @deliveries.each do |delivery| %>
  <tr>
    <td><%= delivery.zip_code %></td>
    <td><%= delivery.address %></td>
    <td><%= delivery.name %></td>
    <td>
      <%= link_to "編集する", edit_delivery_path(delivery), class: "btn btn-primary" %>
      <%= link_to "削除する", delivery_path(delivery.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>