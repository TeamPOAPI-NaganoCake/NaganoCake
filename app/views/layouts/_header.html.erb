<header class="navbar navbar-light bg-light">
  <div class="container">
    <div class=class="navbar-header">
       <% if admin_signed_in? %>
        <h3><%= link_to "ながのCake", admins_homes_top_path %></h3>
        <% else %>
        <h3><%= link_to "ながのCake", root_path %></h3>
        <% end %>
    </div>
    <div>
      
        <% if customer_signed_in? %>
        <ul class="nav navbar-right">
          <li>
            <span class="nav-link">ようこそ、<%= current_customer.last_name %>さん！</span>
          </li>
          <li>
            <%= link_to ' マイページ', customers_path, :style=>"color:black;", class:"btn btn-light" %>
            </li>
          <li>
            <%= link_to ' 商品一覧', items_path, :style=>"color:black;", class:"btn btn-light" %>
          </li>
          <li>
            <%= link_to ' カート', cart_items_path, :style=>"color:black;", class:"btn btn-light" %>
          </li>
          <li>
            <%= link_to ' ログアウト', destroy_customer_session_path, method: :delete, :style=>"color:black;", class:"btn btn-light" %>
          </li>
          </ul>
        <% elsif admin_signed_in? %>
        <ul class="nav navbar-right">
          <li>
            <%= link_to '商品一覧', admins_items_path, :style=>"color:black;", class:"btn btn-light" %>
          </li>
          <li>
            <%= link_to '会員一覧', admins_customers_path, :style=>"color:black;", class:"btn btn-light" %>
          </li>
          <li>
            <%= link_to '注文履歴一覧', admins_homes_top_path, :style=>"color:black;", class:"btn btn-light" %>
          </li>
          <li>
            <%= link_to 'ジャンル一覧', admins_genres_path, :style=>"color:black;", class:"btn btn-light" %>
          </li>
          <li>
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, :style=>"color:black;", class:"btn btn-light" %>
          </li>
        </ul>
          <div class="search-form">
            <%= form_tag(search_path, method: :get) do %>
              <%= text_field_tag 'search[content]' %>
              <%= select_tag 'search[model]', options_for_select({ "会員（名字）" => "customer", "商品" => "item" }) %>
              <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
              <%= submit_tag '検索', class: "btn btn-primary" %>
            <% end %>
          </div>
        <% else %>
        <ul class="nav navbar-right">
          <li>
            <%= link_to ' About',about_path, :style=>"color:black;", class:"btn btn-light" %>
          </li>
          <li>
            <%= link_to ' 商品一覧', items_path, :style=>"color:black;", class:"btn btn-light" %>
          </li>
          <li>
            <%= link_to ' 新規登録', new_customer_registration_path, :style=>"color:black;", class:"btn btn-light" %>
          </li>
          <li>
            <%= link_to ' ログイン', new_customer_session_path, :style=>"color:black;", class:"btn btn-light" %>
          </li>
          <li>
            <%= link_to "管理者画面", new_admin_session_path, :style=>"color:black;", class:"btn btn-light"  %>
          </li>
        </ul>
        <% end %>
      </ul>
    </div>
  </div>
</header>