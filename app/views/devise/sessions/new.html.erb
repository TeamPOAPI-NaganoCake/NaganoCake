<%= flash[:error] %>
<div class="container">
  <br>
<h5><span style="background-color:#C0C0C0">ログイン</span></h5>

<p>会員の⽅はこちらからログイン</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class='table table-borderless'>
    <tr>
      <td><%= f.label :メールアドレス %></td>
      <td><%= f.email_field :email, autofocus: true, placeholder: "sample@example.com" %></td>
    </tr>
    <tr>
      <td><%= f.label :パスワード %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit "ログイン", class: 'btn btn-primary btn-md' %></td>
    </tr>
  </table>
<% end %>


<%= render "devise/shared/links" %>

