<div class="row">
  <h4 class="title">新規会員登録<h4>
</div>

<div class="row">
  <div class="col-md-12 mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <table class='table table-borderless table-sm'>
    <tr>
      <td>
        <p>名前</p>
      </td>
      <td>(性)</td>
      <td>
        <div class="field">
          <%= f.text_field :last_name, autofocus: true, placeholder: "令和 " %>
        </div>
      </td>
      <td></td>
      <td>(名)</td>
      <td>
        <div class="field">
          <%= f.text_field :first_name, placeholder: "道⼦" %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <p>フリガナ</p>
      </td>
      <td>(セイ)</td>
      <td>
        <div class="field">
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
        </div>
      </td>
      <td></td>
      <td>(メイ)</td>
      <td>
        <div class="field">
          <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <p>メールアドレス</p>
      </td>
      <td></td>
      <td>
        <div class="field">
          <%= f.email_field :email, placeholder: "sample@example.com" %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <p>郵便番号(ハイフンなし)</p>
      </td>
      <td></td>
      <td>
        <div class="field">
          <%= f.text_field :zip_code, placeholder: "0000000" %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <p>住所</p>
      </td>
      <td></td>
      <td colspan="4">
        <div class="field">
          <%= f.text_field :address, placeholder: "東京都渋⾕区代々⽊神園町0-0", style: "width: 100%;" %>
        </div>
      </td>
    </tr>
    <tr>
      <td>
        <p>電話番号（ハイフンなし）</p>
      </td>
      <td></td>
      <td>
        <%= f.text_field :phone_number, placeholder: "00000000000" %>
      </td>
    </tr>
    <tr>
      <td>
        <p>パスワード（６文字以上）</p>
      </td>
      <td></td>
      <td>
        <%= f.password_field :password, placeholder: "パスワード" %>
      </td>
    </tr>
    <tr>
      <td>
        <p>パスワード（確認用）</p>
      </td>
      <td></td>
      <td>
        <%= f.password_field :password_confirmation, placeholder: "パスワード確認用" %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td></td>
      <td>
        <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
      </td>
    </tr>
    <% end %>

  </table>
</div>
</div>

<%= render "devise/shared/links" %>







