<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    </br>
    <h4>ジャンル一覧・追加</h4></br>
      <%= form_with model:@genre, url: admins_genres_path(@genre.id), method: :post do |f| %>
        <div>
          <%= f.label :"ジャンル名" %>
          <%= f.text_field :genre_name %>
          <%= f.submit "新規登録", class: "btn btn-info" %>
        </div>
      <% end %>
      </br>
      <table class="table table-hover table-inverse table-bordered">
        <thead>
          <tr class="info">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td class="text-left"><%= genre.genre_name%></td>
              <td><%= link_to "編集する", edit_admins_genre_path(genre), class: "glyphicon glyphicon-pencil btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class= "text-center"><%= paginate(@genres) %></div>
  </div>
</div>