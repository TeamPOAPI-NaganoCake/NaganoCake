<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="row">
        <h2 class="col-md-10 mb-5">商品一覧</h2>
        <div class="col-md-2"><%= link_to " + ", new_admins_item_path, class: "btn btn-lg btn-secondary rounded-circle " %></div>
      </div>
      <table class="table">
        <thead>
          <tr>
            <td>商品ID</td>
            <td>商品名</td>
            <td>税抜き価格</td>
            <td>ジャンル</td>
            <td>ステータス</td>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admins_item_path(item) %></td>
              <td><%= item.non_tax_price.to_s(:delimited) %></td>
              <td><%= item.genre.genre_name %></td>
              <td>
                <% if item.sale_status == true %>
                  <span class="text-success font-weight-bold">販売中</span>
                <% else %>
                  <span class="text-secondary font-weight-bold">販売停止</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <p><%= paginate @items, class: "justify-content-center" %></p>

    </div>
  </div>
</div>