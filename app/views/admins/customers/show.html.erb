<div class="row">
  <h5  class="col-md-10 mx-auto">
    <span style="background-color:#C0C0C0"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</span>
  </h5>
</div>

<br/>

<div class="row">
  <div class="col-md-11 mx-auto">
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td class="active">氏名</td>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td class="active">フリガナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="active">郵便番号</td>
          <td><%= @customer.zip_code %></td>
        </tr>
        <tr>
          <td class="active">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="active">電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td class="active">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.cancel_flag == false %>
              <i>退会</i>
            <% else %>
              <i class="true">有効</i>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

    <div class="col-md-10 text-center">
        <%= link_to "編集する", edit_admins_customer_path(@customer), class: 'btn btn-success form' %>
        <%= link_to "注文履歴一覧を見る", admins_order_path(@customer),class: 'btn btn-primary ' %>
    </div>

