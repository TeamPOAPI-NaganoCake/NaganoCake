<br>
<h4>
  <span style="background-color:#C0C0C0"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</span>
</h4>
<br>
<div class="row">
      <table class="table table-bordered">
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td class="active">氏名</td>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td class="active">フリガナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="active">郵便番号</td>
          <td><%= @customer.zip_code %></td>
        </tr>
        <tr>
          <td class="active">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="active">電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td class="active">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @customer.cancel_flag == false %>
              <i>退会</i>
            <% else %>
              <i>有効</i>
            <% end %>
          </td>
        </tr>
      </table>

  </div>

    <div class="field col-sm-12">
        <%= link_to "編集する", edit_admins_customer_path(@customer), class: 'btn btn-primary btn-sm col-sm-2' %>
        <%= link_to "注文履歴一覧を見る", admins_homes_top_path,class: 'btn btn-primary btn-sm col-sm-3' %>
    </div>
