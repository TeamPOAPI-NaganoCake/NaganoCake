<div class="container">
  <h3>注文履歴詳細</h3>
  <div class="row">
    <div class="col-md-2">
      <p>購入者</p>
    </div>
    <div class="col-md-10">
      <%= link_to "#{@order.customer.last_name} #{@order.customer.first_name}", admins_customer_path(@order.customer) %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p>注文日</p>
    </div>
    <div class="col-md-10 ">
      <p><%= @order.created_at.strftime("%Y/%m/%d") %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p>配送先</p>
    </div>
    <div class="col-md-10">
      <%= "〒 #{@order.delivery_zip_code.to_s.insert(3,"-")} #{@order.delivery_address}" %>
      <p><%= @order.delivery_name %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p>支払方法</p>
    </div>
    <div class="col-md-10">
      <p><%= @order.payment_method %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p>注文ステータス</p>
    </div>
    <div class="col-md-10">
      <%= form_with model:[:admins, @order], method: :patch, local: true do |f| %>
        <%= f.select :order_status, options_for_select(Order.order_statuses, {selected: @order.order_status}) %>
        <%= f.submit "更新", class: "btn btn-sm btn-success" %>
      <% end %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
            <tr>
              <td><%= order_item.item.name %></td>
              <td><%= order_item.purchase_price %></td>
              <td><%= order_item.amount %></td>
              <td><%= (order_item.purchase_price * order_item.amount).to_s(:delimited, delimiter: ',') %></td>
              <%= form_with url: admins_order_item_path(order_item), method: :patch, local: true do |f| %>
                <td><%= f.select :production_status, options_for_select(OrderItem.production_statuses, {selected: order_item.production_status}), class: "d-block" %></td>
                <td><%= f.submit "更新", class: "btn btn-success" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3 offset-md-1">
      <div class="row">
        <div class="col-md-8">
          <p class="font-weight-bold">商品合計</p>
        </div>
        <div class="col-md-4">
          <p><%= @order.total_price.to_s(:delimited, delimiter: ",") + "円" %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <p class="font-weight-bold">送料</p>
        </div>
        <div class="col-md-4">
          <p><%= @order.shipping_price.to_s(:delimited, delimiter: ",") + "円" %></p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <p class="font-weight-bold">請求金額合計</p>
        </div>
        <div class="col-md-4">
          <p class="font-weight-bold"><%= @order.billing_amount.to_s(:delimited, delimiter: ",") + "円" %></p>
        </div>
      </div>
    </div>
  </div>
</div>
