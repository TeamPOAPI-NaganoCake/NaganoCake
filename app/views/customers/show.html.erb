<div class="row">
  <h5 class="col-md-10 mx-auto">
    <span style="background-color:#C0C0C0">マイページ</span>
  </h5>
</div>
  <br>

  <div class="row">
    <div class="col-md-10">
          <b class="form">登録情報</b>
          <%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success" %>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-xs-6">
      <table class="table table-bordered">
        <tr>
          <td class="active">氏名</td>
          <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td class="active">カナ</td>
          <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="active">郵便番号</td>
          <td><%= @customer.zip_code %></td>
        </tr>
        <tr>
          <td class="active">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="active">電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td class="active">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <table>
    <tr>
      <td><b  class="form">配送先</b></td>
      <td><%= link_to "一覧を見る", deliveries_path, class: "btn btn-primary" %></td>
    </tr>
    <tr>
      <td><br></td>
    </tr>
    <tr>
      <td><b  class="form">注文履歴</b></td>
      <td><%= link_to "一覧を見る", "#", class: "btn btn-primary" %></td>
    </tr>
  </table>
</div>