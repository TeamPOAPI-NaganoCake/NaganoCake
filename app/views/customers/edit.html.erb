<div class="container">
  <br>
	<div class="row">
    <h4>会員情報編集</h4>
  </div>
  <br>


<%= form_with model:@customer, local:true do |f| %>
<table>
  <tr>
    <td>氏名</td>
    <td><%= f.text_field :last_name, placeholder:@customer.last_name %></td>
    <td><%= f.text_field :first_name, placeholder:@customer.first_name %></td>
  </tr>
  <tr>
    <td>フリガナ</td>
    <td><%= f.text_field :last_name_kana, placeholder:@customer.last_name_kana %></td>
    <td><%= f.text_field :first_name_kana, placeholder:@customer.first_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= f.text_field :zip_code,  placeholder:@customer.zip_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address, placeholder:@customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= f.text_field :phone_number, placeholder:@customer.phone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= f.email_field :email, placeholder:@customer.email %></td>
  </tr>
  <tr>
    <td></td>
    <td><%= f.submit "編集内容を保存" %></td>
    <td><%= link_to "退会する", confirm_unsubscribe_path(current_customer.id), class: "btn btn-danger" %></td>
  </tr>
</table>
<% end %>
</div>
